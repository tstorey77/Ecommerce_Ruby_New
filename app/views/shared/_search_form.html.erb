<%= form_with(url: search_path, method: "get", local: true) do %>
  <div class="field has-addons">
    <div class="control">
      <%= text_field_tag(:keyword, nil, {class: "input", placeholder: "Search Cards"})%>
    </div>
    <div>
      <%= check_box_tag "SearchWCat", "true" %>
    </div>
    <div class="control">
      <%= select_tag "Category", options_from_collection_for_select(Category.all, "name", "name") %>
    </div>
    <div class="control">
      <%= submit_tag("Search", class: 'button is-info')%>
    </div>
  </div>
<% end %>