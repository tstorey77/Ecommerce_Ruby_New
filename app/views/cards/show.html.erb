<p id="notice"><%= notice %></p>
<head class="title">
  <div>
    <details>
      <summary> Shopping Cart </summary>
      <ul>
        <% @cart.each do |card|%>
          <li> <%= card.name %> <%= link_to 'Remove from cart', remove_from_cart_path(card.id), method: :delete %></li>
        <% end %>
      </ul>
    </details>
  </div>
  <div class="container">
    <br>
    <h1 class="title"> Card Information: </h1>
  </div>
</head>
<div class="columns">
  <div class="container">
    <br>
    <div>
      <%= render partial: 'card',
               object: @card,
               locals: {show_link: false,
                        is_show: true} %>
    </div>
  </div>
</div>
